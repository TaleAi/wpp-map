.trail-list {
  padding: 4px 6px 48px;
}
.done {
  text-decoration: line-through;
  color: #ccc;
}
.trail {
  font-size: 36rpx;
  height: 120rpx;
  padding: 20rpx 24rpx;
  overflow: hidden;
  align-items: center;
  background-color: #fff;
  margin: 18rpx 0;
  border-radius: 6rpx;
  justify-content: center;
  box-shadow: 0 0 10rpx #eee;
}
.trail-icon {
  margin-right: 24rpxpx;
  width: 50rpx;
  height: 50rpx;
}
.trail-text {
  white-space: nowrap;
  display: inline-flex;
  flex-direction: column;
  height: 100rpx;
  line-height:34rpx;
  font-size: 24rpx;
  padding:0 20rpx;
  overflow: hidden;
  flex: 1 1 70%;
}


.operation {
    position: absolute;
    z-index: 100000;
    height: 100rpx;
    top: 50rpx;
    right: 50rpx;
}

.avatar {
    height: 100rpx;
    width: 100rpx;
    position: fixed;
    bottom: 50rpx;
    right: 50rpx;
    z-index: 100000;
    border-radius: 50rpx;
    box-shadow: 0 0 10px #00abff;
}

.history {
    height: 80rpx;
    width: 180rpx;
    position: fixed;
    bottom: 190rpx;
    right: 50rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.share {
    height: 80rpx;
    width: 180rpx;
    position: fixed;
    bottom: 300rpx;
    right: 50rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.menu-text {
    width: 100rpx;
}

.menu-image {
    background-color: #eee;
    width: 80rpx;
    height: 100%;
    border-radius: 40rpx;
}

.menu-text .text {
    padding: 10rpx;
    border-radius: 10rpx;
    font-size: 28rpx;
    background-color: #eee;
    width: 76rpx;
}

.show-menu {
    visibility: visible;
    opacity: 1;
    transition: all 0.5s ease-in-out
}

.hide-menu {
    visibility: hidden;
    opacity: 0;
    transition: all 0.5s ease-in-out
}